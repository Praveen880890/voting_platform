<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        var token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
        function deleteVoter({electionID, voterID}) {
            fetch(`/election/${electionID}/thisvoters/${voterID}`, {
                method: "delete",
                headers: {"Content-Type":"application/json"},
                body: JSON.stringify({
                    "_csrf":token
                })
            }).then((res)=>{
                if (res.ok) {
                    window.location.reload();
                }
            }).catch((err)=> console.error(err))
        }
    </script>
   
</head>
<body class="bg-sky-100">
    <div class="text-center justify-center"><%- include('header.ejs') %> </div>
    <div>
        <% if (messages && messages.error && messages.error.length > 0) { %>
            <% for(var i=0; i<messages.error.length; i++) { %>
                <p class="bg-purple-100 my-3 list-none rounded-md px-4 py-2"><%= messages.error[i] %></p>
            <% } %>
        <% } %>
    </div>
    <div class="flex gap-1 mx-10 mt-6">
        <span>></span>
        <a href="/election" class="text-black-800 hover:text-purple-600">All Elections</a>
        <span>></span>
        <a href="/election/<%= id %>/" class="text-black-800 hover:text-purple-600">Election</a>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <div class="my-6 mx-10">
        <div class="flex-auto">
            <h5 class="text-2xl text-center justify-center mx-auto">Voters</h5>
            <div class="mx-auto justify-center text-center>  
                <p class="text-purple-600 text-center justify-center flex mx-auto"><%= (thisvoters.length==0)?"There are no voters yet!":"" %></p>
                <ol class="list-decimal mx-auto justify-center text-center">
                   
                    <% for (let i=0; i< thisvoters.length; i++) { %>
                        <li>
                            <div class="flex justify-between items-center w-full my-2 px-2 py-1 rounded hover:bg-purple-50">
                                <p class="my-2 text-lg text-purple-600 "><%= thisvoters[i].voterUnqid %></p>
                                <div class="flex gap-2 text-purple-800">
                                    <% if (!thisvoters[i].didVote) { %>
                                        <div class="rounded w-fit px-2 py-1 flex gap-2 cursor-pointer hover:text-purple-600">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mt-1">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                            </svg>                                                                          
                                           
                                        </div>
                                        <% if (thisvoters.length > 1) { %>
                                        <div class="rounded w-fit px-2 py-1 flex gap-2 cursor-pointer hover:text-purple-600">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mt-1">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                            </svg>                                      
                                            <a onclick="deleteVoter({electionID: <%=id %>, voterID: <%= thisvoters[i].id %>})" class="text-sm">Delete voter</a>
                                        </div>
                                        <% } %>
                                    <% } else { %>
                                        <div class="rounded w-fit px-2 py-1 flex gap-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                              </svg>                                                                                 
                                            <p class="text-sm">Successfully voted</p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </li>
                    <% } %>
                </ol>
                <div class="flex gap-2 py-4 mx-auto justify-center text-center">
                    <div class="bg-orange-400 rounded w-fit px-2 py-1 hover:bg-green-400">
                        <a href="/election/<%= id %>/voters/create" class="text-white">+ Add a new voter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>